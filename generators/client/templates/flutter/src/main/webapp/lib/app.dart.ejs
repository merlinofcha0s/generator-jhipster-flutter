      title: 'Jhipster flutter app',
      theme: ThemeData(
        primarySwatch: Colors.indigo,
      ),
      routes: {
        <%= baseName %>Routes.login: (context) {
          return BlocProvider<LoginBloc>(bloc: LoginBloc(), child: LoginScreen());
